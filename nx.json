{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "workspaceLayout": {
    "appsDir": ".",
    "libsDir": "libs"
  },
  "targetDefaults": {
    "@nx/node:build": {
      "cache": true,
      "inputs": [
        "production",
        "^production"
      ]
    },
    "@nx/node:serve": {
      "cache": false,
      "dependsOn": [
        "build"
      ]
    },
    "@nx/eslint:lint": {
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json"
      ]
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": [
        "default",
        "^production"
      ],
      "options": {
        "codeCoverage": true
      }
    }
  },
  "projects": {
    "nodejs-backend": {
      "root": ".",
      "sourceRoot": "src",
      "projectType": "application"
    }
  },
  "nxCloudId": "68d66b9a5b8610daff2305b4"
}