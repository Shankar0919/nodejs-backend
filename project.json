{
  "name": "nodejs-backend",
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "outputPath": "dist",
        "main": "src/main.ts",
        "tsConfig": "tsconfig.build.json"
      },
      "configurations": {
        "development": {
          "optimization": false,
          "fileReplacements": [
            {
              "replace": "src/environments/environment.development.ts",
              "with": "src/environments/environment.eng.ts"
            }
          ]
        },
        "eng": {
          "optimization": false,
          "fileReplacements": [
            {
              "replace": "src/environments/environment.development.ts",
              "with": "src/environments/environment.eng.ts"
            }
          ]
        },
        "production": {
          "optimization": true,
          "fileReplacements": [
            {
              "replace": "src/environments/environment.development.ts",
              "with": "src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "nodejs-backend:build",
        "runtimeArgs": [],
        "inspect": false
      },
      "configurations": {
        "development": {
          "buildTarget": "nodejs-backend:build:development"
        },
        "eng": {
          "buildTarget": "nodejs-backend:build:eng"
        },
        "production": {
          "buildTarget": "nodejs-backend:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["src/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage"],
      "options": {
        "jestConfig": "jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true
      }
    }
  },
  "tags": []
}
