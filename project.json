{
  "name": "nodejs-backend",
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "local",
      "options": {
        "outputPath": "dist",
        "main": "src/main.ts",
        "tsConfig": "tsconfig.build.json"
      },
      "configurations": {
        "local": {
          "optimization": false
        },
        "production": {
          "optimization": true
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "local",
      "options": {
        "buildTarget": "nodejs-backend:build"
      },
      "configurations": {
        "local": {
          "buildTarget": "nodejs-backend:build:local"
        },
        "production": {
          "buildTarget": "nodejs-backend:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["src/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage"],
      "options": {
        "jestConfig": "jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true
      }
    }
  },
  "tags": []
}
